{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-native",
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "./build",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "target": "es2017"
    },
    "exclude": [
        "build",
        "node_modules"
    ],
    "compileOnSave": true
}
